<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                                 android:id="@+id/compactCalendarView"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="300dp"
                                                                 android:layout_marginStart="8dp"
                                                                 android:layout_marginEnd="8dp"
                                                                 app:compactCalendarBackgroundColor="@android:color/white"
                                                                 app:compactCalendarCurrentDayBackgroundColor="@color/colorPrimary"
                                                                 app:compactCalendarCurrentDayIndicatorStyle="fill_large_indicator"
                                                                 app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorAccent"
                                                                 app:compactCalendarCurrentSelectedDayTextColor="@android:color/white"
                                                                 app:compactCalendarEventIndicatorStyle="no_fill_large_indicator"
                                                                 app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="false"

                                                                 app:compactCalendarTargetHeight="300dp"
                                                                 app:compactCalendarTextColor="@android:color/black"
                                                                 app:compactCalendarTextSize="14sp"
                                                                 app:layout_constraintEnd_toEndOf="parent"
                                                                 app:layout_constraintStart_toStartOf="parent"
                                                                 app:layout_constraintBottom_toBottomOf="parent"
                                                                 android:layout_marginBottom="8dp"
                                                                 android:layout_marginTop="16dp"
                                                                 app:layout_constraintTop_toBottomOf="@+id/dialog_time"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_time" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>